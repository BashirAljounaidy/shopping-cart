{{# each products }}
<div class="row">
  {{# each this}} 
    <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{this.imagePath}}" alt="...">
      <div class="caption">
        <h3>{{this.title}}</h3>
        <div class="description"><p >{{this.description}}</p></div>
        <div class="clearfix">
        <p class="price pull-left">${{this.price}}</p>
        <a href="#" class="btn btn-success pull-right" role="button">Add to Cart</a>
        </div>
      </div>
    </div>
  </div>
  {{/ each }}
</div>
{{/ each}}
